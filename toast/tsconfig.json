{
  "compilerOptions": {
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "target": "ES2018",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
